echo "Removing MDH ..."

sudo -u $hadoop_user rm -rf $data_root
userdel -r $hadoop_user

for app in $app_rev
do
	if [ -e /etc/init.d/$app ]; then
		echo "removing $app ..."
		rm -f /etc/init.d/$app
		# execute ${app}_destroy || exit 1
		rm -rf $"$app"_home
		echo
	fi
done

rm -rf $mdh_root || exit 1
rm -rf $util_root || exit 1

rm -f $profile # FIXME

rm -vf $0

echo "MDH removed successfully!"
echo
